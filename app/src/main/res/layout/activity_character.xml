<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#191919">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/character_name"
            style="@style/text_style"
            android:text="name"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/character_number"
            style="@style/text_style"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:text="number" />

    </LinearLayout>

    <ImageView
        android:id="@+id/character_image"
        android:layout_width="355sp"
        android:layout_height="355sp"
        android:src="@drawable/palutena" />

    <TextView
        android:id="@+id/character_size"
        style="@style/text_style"
        android:text="size" />

    <TextView
        android:id="@+id/character_weight"
        style="@style/text_style"
        android:text="weight" />

    <TextView
        android:id="@+id/character_speed"
        style="@style/text_style"
        android:text="speed" />

    <TextView
        android:id="@+id/character_power"
        style="@style/text_style"
        android:text="Power" />

</LinearLayout>